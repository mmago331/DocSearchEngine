<% layout('_layout', { title: 'Library' }) %>
<div class="flex items-center justify-between">
  <div>
    <h1 class="text-2xl font-semibold">Your library</h1>
    <p class="text-sm text-gray-500">Manage uploaded documents</p>
  </div>
  <a href="/upload" class="inline-flex items-center rounded-lg bg-rose-600 px-4 py-2 text-sm font-medium text-white hover:bg-rose-500">Upload</a>
</div>
<div class="mt-4 space-y-3">
  <% if (!docs || docs.length === 0) { %>
    <div class="rounded-xl border border-dashed p-6 text-center text-sm text-gray-500">No documents yet. Upload a PDF to get started.</div>
  <% } else { %>
    <% docs.forEach(function(doc) { %>
      <div class="rounded-xl border p-4">
        <div class="flex items-start justify-between">
          <div>
            <div class="text-base font-semibold"><%= doc.title %></div>
            <div class="text-sm text-gray-500">Uploaded <%= new Date(doc.created_at).toLocaleString() %></div>
          </div>
          <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-600"><%= doc.is_public ? 'Public' : 'Private' %></span>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
