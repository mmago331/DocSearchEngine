{
  "name": "docsearchengine",
  "private": true,
  "type": "module",
  "engines": { "node": ">=18" },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json && node ./scripts/build-css.mjs && node ./scripts/copy-public.mjs",
    "start": "node dist/server.js",
    "migrate:up": "psql \"$DATABASE_URL\" -f migrations/001_init.sql"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-pg-simple": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdfjs-dist": "^4.4.168",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.8",
    "@types/node": "^20.11.30",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.12",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
